<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <View
        android:id="@+id/v_icon_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_content_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/v_icon_1"
        android:layout_toRightOf="@+id/v_icon_1"
        android:text="@string/str_advertisement_1" />

    <View
        android:id="@+id/v_icon_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/v_icon_1"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_content_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_icon_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/v_icon_2"
        android:layout_toRightOf="@+id/v_icon_1"
        android:text="@string/str_advertisement_2" />

</RelativeLayout>
